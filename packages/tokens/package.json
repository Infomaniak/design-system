{
  "name": "@infomaniak-design-system/tokens",
  "version": "0.0.0",
  "type": "module",
  "main": "./index.js",
  "scripts": {
    "=== BUILD ===": "",
    "build": "yarn build:tokens && yarn copy:dist && yarn copy:markdown",
    "validate:tokens": "node --no-warnings=ExperimentalWarning scripts/ci/validate-tokens/validate-tokens.script.ts",
    "build:tokens": "node --no-warnings=ExperimentalWarning scripts/ci/build-tokens/build-tokens.script.ts",
    "copy:dist": "DEST=demo/node_modules/@infomaniak-design-system/tokens/ && rm -rf $DEST && mkdir -p $DEST && cp -a dist/web/. $DEST",
    "copy:markdown": "cp -r dist/markdown/*.md ../../apps/docs/src/stories/assets/",
    "convert-figma-tokens": "node --no-warnings=ExperimentalWarning scripts/ci/convert-figma-tokens/convert-figma-tokens.script.ts",
    "=== PUBLISH ===": "",
    "publish": "yarn publish:tokens:dev",
    "publish:tokens:dev": "node --no-warnings=ExperimentalWarning scripts/ci/publish-tokens/publish-tokens.script.ts --mode=dev",
    "publish:tokens:prod": "node --no-warnings=ExperimentalWarning scripts/ci/publish-tokens/publish-tokens.script.ts --mode=prod",
    "publish:ci": "node --no-warnings=ExperimentalWarning scripts/ci/publish-tokens/publish-tokens.script.ts --mode=prod --tag=$NPM_DIST_TAG"
  },
  "description": "Infomaniak's Design System - Tokens",
  "keywords": [
    "Infomaniak",
    "Design tokens",
    "DTCG"
  ],
  "private": true,
  "devDependencies": {
    "colorjs.io": "^0.6.1",
    "zod": "^4.3.6"
  }
}
