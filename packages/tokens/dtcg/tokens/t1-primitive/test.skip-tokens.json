{
  "color": {
    "focusring": {
      "$type": "color",
      "$value": { "colorSpace": "srgb", "components": [0.04, 0.64, 1] }
    }
  },
  "font": {
    "serif": { "$value": "Roboto", "$type": "fontFamily" },
    "size": {
      "smallest": {
        "$value": {
          "value": 12,
          "unit": "px"
        },
        "$type": "dimension"
      }
    },
    "weight": { "normal": { "$value": 400, "$type": "fontWeight" } }
  },
  "border": {
    "heavy": {
      "$type": "border",
      "$value": {
        "color": {
          "colorSpace": "srgb",
          "components": [0.218, 0.218, 0.218]
        },
        "width": {
          "value": 3,
          "unit": "px"
        },
        "style": "solid"
      }
    },
    "focusring": {
      "$type": "border",
      "$value": {
        "color": "{color.focusring}",
        "width": {
          "value": 1,
          "unit": "px"
        },
        "style": "solid"
      }
    }
  },
  "transition": {
    "emphasis": {
      "$type": "transition",
      "$value": {
        "duration": { "value": 200, "unit": "ms" },
        "delay": { "value": 0, "unit": "ms" },
        "timingFunction": [0.5, 0, 1, 1]
      }
    }
  },
  "type-styles": {
    "heading-level-1": {
      "$type": "typography",
      "$value": {
        "fontFamily": "Roboto",
        "fontSize": {
          "value": 42,
          "unit": "px"
        },
        "fontWeight": 700,
        "letterSpacing": {
          "value": 0.1,
          "unit": "px"
        },
        "lineHeight": 1.2
      }
    },
    "microcopy": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{font.serif}",
        "fontSize": "{font.size.smallest}",
        "fontWeight": "{font.weight.normal}",
        "letterSpacing": {
          "value": 0,
          "unit": "px"
        },
        "lineHeight": 1
      }
    }
  }
}
