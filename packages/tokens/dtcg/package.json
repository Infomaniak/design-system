{
  "name": "@infomaniak-design-system/tokens-dtcg",
  "version": "0.0.0",
  "type": "module",
  "main": "./index.js",
  "scripts": {
    "import": "node scripts/scripts/import-from-figma.ts",
    "normalize-and-build": "yarn run normalize && yarn run build",
    "normalize": "node scripts/scripts/normalize.ts",
    "build": "yarn sd:build && yarn copy:css",
    "sd:build": "node scripts/styled-dictionary/build-tokens.ts",
    "copy:css": "rm -rf demo/src/styles/ && cp -a dist/. demo/src/styles/",
    "tz:build": "yarn tz:build:light && yarn tz:build:dark && yarn tz:build:light-mode && yarn tz:build:dark-mode && yarn tz:build:mail-mode",
    "tz:build:light": "tz build -c terrazzo-configs/terrazzo.light.config.js",
    "tz:build:dark": "tz build -c terrazzo-configs/terrazzo.dark.config.js",
    "tz:build:light-mode": "tz build -c terrazzo-configs/terrazzo.light-mode.config.js",
    "tz:build:dark-mode": "tz build -c terrazzo-configs/terrazzo.dark-mode.config.js",
    "tz:build:mail-mode": "tz build -c terrazzo-configs/terrazzo.mail-mode.config.js"
  },
  "description": "Infomaniak's Design System - Tokens",
  "keywords": [],
  "private": true,
  "devDependencies": {
    "@terrazzo/cli": "^2.0.0-alpha.7",
    "@terrazzo/plugin-css": "^2.0.0-alpha.7",
    "@terrazzo/plugin-tailwind": "^0.3.3",
    "colorjs.io": "^0.6.0",
    "style-dictionary": "^5.1.3"
  }
}
