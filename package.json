{
  "name": "@infomaniak/design-system",
  "version": "0.0.0",
  "type": "module",
  "main": "./index.js",
  "scripts": {
    "=== BUILD ===": "",
    "build": "yarn workspaces foreach -Apt run build",
    "build:tokens": "yarn workspace @infomaniak-design-system/tokens build",
    "build:docs": "yarn workspace @infomaniak-design-system/docs build",
    "=== FORMAT ===": "",
    "format": "prettier --write --ignore-unknown --config .prettierrc \"./**/*.{js,jsx,ts,tsx,html,css,scss}\"",
    "=== TEST ===": "",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "=== PUBLISH ===": "",
    "publish:tokens:dev": "yarn workspace @infomaniak-design-system/tokens publish:tokens:dev",
    "=== CI ===": "",
    "ci:on-pull-request": "node --no-warnings=ExperimentalWarning scripts/scripts/on-pull-request/on-pull-request.script.ts"
  },
  "description": "Infomaniak's Design System",
  "keywords": [],
  "author": "Valentin Richard",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Infomaniak/design-system.git"
  },
  "workspaces": {
    "packages": [
      "packages/tokens",
      "packages/tokens/demo",
      "apps/docs"
    ]
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@vitest/coverage-istanbul": "^4.0.18",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "yarn@4.12.0"
}
